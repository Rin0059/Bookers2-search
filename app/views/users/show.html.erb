<div class='container px-5 px-sm-0'>
  <div class='row'>
    <div class='col-md-3'>
      <h2>User info</h2>
      <%= render 'info', user: @user %>
      
        <%# if current_user != @user %>
        <% if current_user.following?(@user) %>
          <%= link_to "フォロー外す", user_relationships_path(@user.id), method: :delete, class: 'btn btn-sm btn-danger' %>
        <% else %>
          <%= link_to "フォローする", user_relationships_path(@user.id), method: :post, class: 'btn btn-success' %>
        <% end %>
        <%# end %>
        
      <h2 class="mt-3">New book</h2>
      <%= render 'books/form', book: @book %>
    </div>
    
    <div class='col-md-8 offset-md-1'>
      <%= form_with url: user_search_path(@user), method: :get, local: true do |f| %>
        <%= f.text_field :name %>
        <%= select_tag 'range', options_for_select([['User', '1'], ['Book', '2']]) %>
        <%= select_tag 'search', options_for_select([["完全一致","perfect_match"], ["部分一致","partial_match"]]) %>
        <%= f.submit :検索 %>
      <% end %>
      <h2>Books</h2>
      <%= render 'books/index',books: @books %>
    </div>
  </div>
</div>


